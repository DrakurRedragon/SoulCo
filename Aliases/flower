# If Logic, feeling

if froll == 1:
    feeling = "sensual and giddy"
elif froll == 2:
    feeling = "warm and delicate"
elif froll == 3:
    feeling = "hopeful and promising"
elif froll == 4:
    feeling = "dignified yet comforting"
elif froll == 5:
    feeling = "summer-like and happy"
elif froll == 6:
    feeling = "innocent"
else:
    feeling = "comforting and homey"

# If Logic, smell

